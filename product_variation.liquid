<!-- {% endif %} -->


<script>
  const myRadios = document.getElementsByClassName("product-form__radio");

  for (let i = 0; i < myRadios.length; i++) {
    myRadios[i].onclick = function() {
      const dataId = this.getAttribute("data-variant-id");
      console.log(dataId);
      showSection(dataId);
    }
  }

    function showSection(sectionId) {
    const sections = document.getElementsByClassName("productDescription_cst");

    for (let i = 0; i < sections.length; i++) {
      if (sections[i].id === sectionId) {
        sections[i].style.display = "block";
      } else {
        sections[i].style.display = "none";
      }
    }
  }
</script>
