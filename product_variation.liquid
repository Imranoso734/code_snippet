  {% for variant in product.variants %}
  
    <div
      {% if product.selected_or_first_available_variant.id == variant.id %}
        style="display:block"
        {% else %}
        style="display:none"
      {% endif %}
      class="productDescription_cst"
      id="{{  variant.id }}"
    >
      {{ variant.metafields.custom.variant_description }}
    </div>
  {% endfor %}
</div>
